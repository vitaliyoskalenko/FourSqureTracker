<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView
            android:id="@+id/txt_venue_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:padding="4dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btn_checkin"
            android:text="Description sdfskladjflksajdflkj lksjdflkjlsadkjf lksdjflkjsd dkf"/>

    <TextView
            style="@style/bottom_text_style"
            android:id="@+id/txt_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kherson"
            android:layout_below="@id/txt_venue_name"/>

    <TextView
            style="@style/bottom_text_style"
            android:id="@+id/txt_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="distance"
            android:layout_below="@id/txt_venue_name"
            android:layout_toRightOf="@id/txt_city"/>

    <ImageButton
            android:id="@+id/btn_checkin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_checkin"
            android:layout_alignParentRight="true"/>


</RelativeLayout>